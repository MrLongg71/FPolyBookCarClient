<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/carviewDriver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDiver"
                android:layout_marginTop="20dp"
                android:layout_width="96dp"
                android:layout_centerHorizontal="true"
                android:layout_height="96dp"
                android:src="@drawable/ic_user_driver"
                app:civ_border_color="#2196F3"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/txtNameDriver"
                android:text="Tên tài xế"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:layout_below="@+id/imgDiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtLicensePlateDriver"
                android:text="Tên tài xế"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:layout_below="@+id/txtNameDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@+id/ratingbarShow"
                android:layout_margin="10dp"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtLicensePlateDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_below="@id/ratingbarShow"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgSMSDriver"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_textsms_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/imgPhoneDriver"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_settings_phone_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <ImageView
                    android:id="@+id/imgInfoDriver"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_info_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/imgCancelDriver"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

