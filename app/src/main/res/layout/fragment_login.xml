<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:background="#ffff"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/race">

        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            android:elevation="50dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ffff"
                android:orientation="vertical">

                <TextView
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="30dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Username"
                    android:textColor="#000"
                    android:textSize="18dp">

                </TextView>

                <EditText

                    android:id="@+id/edtEmailLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Username">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Password"
                    android:textColor="#000"
                    android:textSize="18dp">

                </TextView>

                <EditText
                    android:id="@+id/edtPassLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Password">

                </EditText>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/txtforgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="Forgot Password?"
                    android:textColor="@color/fullapp"
                    android:textSize="20dp">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remmember me?">

            </CheckBox>

            <Button
                android:id="@+id/btnLoginHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/fullapp"
                android:background="@drawable/custom_button_login"
                android:text="LOGIN"
                android:textColor="#fff"
                android:textSize="18dp">

            </Button>
        </LinearLayout>

      <LinearLayout
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <View
              android:layout_marginTop="2dp"
              android:background="#ccc"
              android:layout_width="60dp"
              android:layout_height="2dp">
          </View>
          <TextView
              android:layout_marginLeft="10dp"
              android:textSize="18dp"
              android:layout_marginRight="10dp"
              android:textColor="#000"
              android:text="Connect using  account "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          </TextView>
          <View
              android:layout_marginTop="2dp"
              android:background="#ccc"
              android:layout_width="60dp"
              android:layout_height="2dp">
          </View>

      </LinearLayout>

        <FrameLayout
            android:background="@drawable/iconloogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:scaleType="centerInside"
                    android:id="@+id/btnFb"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_icon_fb"
                    android:src="@drawable/iconfb"
                    android:layout_height="60dp">

                </ImageView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerInside"
                    android:id="@+id/btnGoogle"
                    android:background="@drawable/custom_icon_google"
                    android:src="@drawable/icongoogle"
                    android:layout_height="60dp">
                </ImageView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerInside"
                    android:id="@+id/btnPhone"
                    android:background="@drawable/custom_icon_fb"
                    android:src="@drawable/ic_call_black_24dp"
                    android:layout_height="60dp">
                </ImageView>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>
