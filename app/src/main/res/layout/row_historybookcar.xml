<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#F5F1F1"
        android:id="@+id/carviewActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/imgIconCarHistory"
                android:src="@drawable/iconcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18dp"
                android:id="@+id/txttitleHistoryItem"
                android:textColor="#1C1C1C"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgIconCarHistory"
                android:text="sdadsadsadsasdasÄ‘sasd"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#67676767"
                android:textStyle="bold"
                android:id="@+id/txtgenreHistoryItem"
                android:text="GrabBike"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgIconCarHistory"
                android:layout_below="@+id/txttitleHistoryItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:text="30 thg 7"
                android:textColor="#67676767"
                android:id="@+id/txtdateHistoryItem"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>