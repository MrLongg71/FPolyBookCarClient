<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIconHintMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/rsz_1hinticonmap" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/imgIconHintMap"
                    android:text="Bạn sẽ đi 10 km và mất khoảng 10 phút"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtHintMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgIconHintMap"
                    android:layout_margin="10dp"
                    android:text="Gợi ý dịch vụ"
                    android:textColor="#000000"
                    android:textSize="18dp" />


                <RadioGroup
                    android:id="@+id/radioGroupMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHintMap">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp" />

                        <ImageView
                            android:id="@+id/imgIconMotoMap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_toRightOf="@id/radio1"
                            android:src="@drawable/rsz_iconmotomap" />

                        <TextView
                            android:id="@+id/txttitleMotoMap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/imgIconMotoMap"
                            android:text="GrabCar"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSeatMotoMap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txttitleMotoMap"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/imgIconMotoMap"
                            android:text=" 4 chỗ" />

                        <TextView
                            android:id="@+id/txtUnitMotoMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignRight="@id/txtMotoMoney"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="42dp"

                            android:layout_toStartOf="@+id/txtMotoMoney"
                            android:text="VND " />

                        <TextView
                            android:id="@+id/txtMotoMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentRight="true"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="40dp"
                            android:text="23K "
                            android:textColor="#f000"
                            android:textSize="20dp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton

                            android:layout_marginTop="20dp"
                            android:id="@+id/radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:layout_toRightOf="@id/radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView

                                android:id="@+id/imgIconCarMap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:src="@drawable/rsz_iconcarmapp" />

                            <TextView
                                android:id="@+id/txttitleCarMap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@+id/imgIconCarMap"
                                android:text="GrabCar"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtSeatCarMap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txttitleCarMap"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgIconCarMap"
                                android:text=" 4 chỗ" />

                            <TextView
                                android:id="@+id/txtUnitCarMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_alignRight="@id/txtMoney"
                                android:layout_marginTop="28dp"
                                android:layout_marginEnd="42dp"

                                android:layout_toStartOf="@+id/txtMoney"
                                android:text="VND " />

                            <TextView
                                android:id="@+id/txtMoney"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="23dp"
                                android:layout_marginRight="40dp"
                                android:text="23K "
                                android:textColor="#f000"
                                android:textSize="20dp" />
                        </RelativeLayout>


                    </RelativeLayout>

                </RadioGroup>
            </RelativeLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_bookcar"
                android:text="Đặt xe BookCar"
                android:textAllCaps="false"
                android:textColor="#feffff"
                android:textSize="18dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>