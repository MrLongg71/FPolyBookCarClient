<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgItemHintFood"
                android:layout_width="150dp"
                android:layout_height="150dp"

                app:riv_corner_radius="10dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/txttitleHintFoodItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/imgItemHintFood"
                android:text="Snowskin mooncake"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtDetailHintFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttitleHintFoodItem"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/imgItemHintFood"
                android:text="Snowskin mooncake"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imgRateHintFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDetailHintFood"
                android:layout_toRightOf="@id/imgItemHintFood"
                android:src="@drawable/rsz_iconstar" />

            <TextView
                android:id="@+id/txtrateHintFood"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDetailHintFood"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imgRateHintFood"
                android:text="3.3"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imgMinuteHintFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDetailHintFood"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/txtrateHintFood"
                android:src="@drawable/rsz_iconclock" />

            <TextView
                android:id="@+id/txtMinuteHintFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDetailHintFood"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imgMinuteHintFood"
                android:text="20 minute"
                android:textColor="#000000" />

            <View

                android:id="@+id/lineview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txtMinuteHintFood"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/imgItemHintFood"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/txtBookNowHintFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineview"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imgItemHintFood"
                android:gravity="center"
                android:text="Book Now"
                android:textStyle="bold"
                android:textColor="#219BCC" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>

